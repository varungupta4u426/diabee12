<!-- Design Starts Here -->
<div class="main-div">
      <div class="page-title">
        <h1 class="pull-left">View Doctor</h1>
        <div class="pull-right">
          <a href="/doctors/<%= @doctor.id %>/edit" class="add-btn blue-bg"><i class="icon icon-edit-1"></i> Edit</a>
          <a href="/doctors" class="add-btn"><i class="icon icon-left-arrow"></i> Back</a> 
        </div>
      </div>
      <div class="white-bg">
        
        <div class="row">
          <div class="col-md-2 col-sm-3 col-xs-12">
            <div class="form-group">
              <label>Title</label>
              <input type="text" class="form-control" value="<%= @doctor.title %>" readonly>
            </div>
          </div>
          <div class="col-md-2 col-sm-3 col-xs-12">
            <div class="form-group">
              <label>First Name</label>
              <input type="text" class="form-control" value="<%= @doctor.first_name %>" readonly>
            </div>
          </div>
          <div class="col-md-2 col-sm-3 col-xs-12">
            <div class="form-group">
              <label>Last Name</label>
              <input type="text" class="form-control" value="<%= @doctor.last_name %>" readonly>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2 col-sm-4 col-xs-12">
            <div class="form-group">
              <label>Phone</label>
              <input type="text" class="form-control" value="<%= @doctor.phone %>" readonly>
            </div>
          </div>
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="form-group">
              <label>Email</label>
              <input type="text" class="form-control" value="<%= @doctor.email %>" readonly>
            </div>
          </div>
        </div>
        
        
        <div class="row">
          <div class="col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
              <label>Address</label>
              <textarea class="form-control" rows="3" readonly><%= @doctor.address %></textarea>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-3 col-sm-3 col-xs-12">
            <div class="form-group">
              <label>Postal Code</label>
              <input type="text" class="form-control" value="<%= @doctor.postal_code %>" readonly>
            </div>
          </div>
          <div class="col-md-3 col-sm-3 col-xs-12">
            <div class="form-group">
              <label>City</label>
              <input type="text" class="form-control" value="<%= @doctor.city %>" readonly>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 col-sm-4 col-xs-12">
            <div class="form-group">
              <label>Speciality</label>
              <input type="text" class="form-control" value="<%= @doctor.speciality %>" readonly>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2 col-sm-4 col-xs-12">
            <div class="form-group">
              <label>Attendant's Name</label>
              <input type="text" class="form-control" value="<%= @doctor.attendant_name %>" readonly>
            </div>
          </div>
          <div class="col-md-2 col-sm-4 col-xs-12">
            <div class="form-group">
              <label>Attendant's Phone</label>
              <input type="text" class="form-control" value="<%= @doctor.attendant_phone %>" readonly>
            </div>
          </div>
          <div class="col-md-2 col-sm-4 col-xs-12">
            <div class="form-group">
              <label>Patient's Prescribed</label>
              <input type="text" class="form-control" value="<%= @doctor.patient_prescribed %>" readonly>
            </div>
          </div>
        </div>
        
        
        
      </div>
      
    </div>
<!-- Design Ends Here -->
